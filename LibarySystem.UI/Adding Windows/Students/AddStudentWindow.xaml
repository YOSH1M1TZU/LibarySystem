                 Width="140" UseLayoutRounding="False" MaxLines="1" SpellCheck.IsEnabled="True" />
        <Label Content="Drugie Imie:" HorizontalAlignment="Left" Margin="17,73,0,0" VerticalAlignment="Top" Height="27"
               Width="76" Foreground="White" />
        <TextBox x:Name="TXTBSecoundName" HorizontalAlignment="Left" Height="23" Margin="91,75,0,0"
                 VerticalAlignment="Top"
                 Width="140" VerticalScrollBarVisibility="Disabled" UseLayoutRounding="True" Background="White"
                 MaxLines="1" MaxLength="11" />
        <Label x:Name="label" Content="DODAJ STUDENTA:" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Height="30" Width="190" Foreground="#FF00A2FF" FontSize="20" VerticalContentAlignment="Center" Padding="0"/>
        <Button x:Name="BTNExit" Content="X" HorizontalAlignment="Left" Margin="245,5,0,0" VerticalAlignment="Top" Width="20" Height="20" FontSize="14" Padding="0" Foreground="White" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Click="BTNExit_Click"/>

    </Grid>
</Window>