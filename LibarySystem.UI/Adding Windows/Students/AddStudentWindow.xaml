                 VerticalAlignment="Top" Width="140" MaxLines="1" Background="White" SpellCheck.IsEnabled="True" />
        <TextBox x:Name="TXTBSurname" HorizontalAlignment="Left" Height="23" Margin="91,104,0,0"
